## Declarations of Links builtins.

# Integer arithmetic operations.
infixl 6 +;
#infixl 6 -; # Minus is hard-coded in the parser for now.
infixl 7 *;
infixl 7 /;
infixr 8 ^;
alien builtin {
  +      : (Int, Int) -> Int = "%int_plus";
  -      : (Int, Int) -> Int = "%int_minus";
  *      : (Int, Int) -> Int = "%int_mult";
  /      : (Int, Int) -> Int = "%int_div";
  ^      : (Int, Int) -> Int = "%int_pow";
  mod    : (Int, Int) -> Int = "%int_mod";
  negate : (Int)      -> Int = "%int_negate";
}

# Floating point operations.
infixl 6 +.;
#infixl 6 -.; # Float minus is hard-coded in the parser for now.
infixl 7 *.;
infixl 7 /.;
infixr 8 ^.;
alien builtin {
  +.      : (Float, Float) -> Float = "%float_plus";
  -.      : (Float, Float) -> Float = "%float_minus";
  *.      : (Float, Float) -> Float = "%float_mult";
  /.      : (Float, Float) -> Float = "%float_div";
  ^.      : (Float, Float) -> Float = "%float_pow";
  negatef : (Float)        -> Float = "%float_negate";
  # Trig.
  floor   : (Float) -> Float     = "%float_floor";
  ceiling : (Float) -> Float     = "%float_ceiling";
  cos     : (Float) -> Float     = "%float_cos";
  sin     : (Float) -> Float     = "%float_sin";
  tan     : (Float) -> Float     = "%float_tan";
  log     : (Float) -> Float     = "%float_log";
  log10   : (Float) -> Float     = "%float_log10";
  sqrt    : (Float) -> Float     = "%float_sqrt";
}

# String concatenation.
infixr 8 ^^;
alien builtin ^^ : (String, String) -> String = "%str_cat";

# Polymorphic relational operators.
infix 4 ==;
infix 4 <>;
infix 4 <;
infix 4 >;
infix 4 <=;
infix 4 >=;
alien builtin {
  == : (a, a) -> Bool = "%rel_poly_eq";
  <> : (a, a) -> Bool = "%rel_poly_neq";
  <  : (a, a) -> Bool = "%rel_poly_lt";
  >  : (a, a) -> Bool = "%rel_poly_gt";
  <= : (a, a) -> Bool = "%rel_poly_le";
  >= : (a, a) -> Bool = "%rel_poly_ge";
}

# Client side equality functions.
alien javascript {
  intEq    client : (Int   , Int)     -> Bool = "intEq";
  stringEq client : (String, String)  -> Bool = "stringEq";
  floatEq  client : (Float , Float)   -> Bool = "floatEq";
  floatNeq client : (Float , Float)   -> Bool = "floatNeq";
  objectEq client : (a     , a)       -> Bool = "objectEq";
}

# Conversion functions.
alien builtin {
  # Integers.
  intToString : (Int)    -> String = "%conv_int_to_string";
  intToFloat  : (Int)    -> Float  = "%conv_int_to_float";
  intToXml    : (Int)    -> Xml    = "%conv_int_to_xml";

  # Floating points.
  floatToInt    : (Float) -> Int    = "%conv_int_to_float";
  floatToString : (Float) -> String = "%conv_float_to_string";
  floatToXml    : (Float) -> Xml    = "%conv_float_to_xml";

  # Strings.
  stringToInt   : (String) -> Int   = "%conv_string_to_int";
  stringToFloat : (String) -> Float = "%conv_string_to_float";
  stringToXml   : (String) -> Xml   = "%conv_string_to_xml";
}

# Exit.
alien builtin exit : (a) ~> b = "%exit";
alien builtin sysexit : (Int) ~> a = "%sysexit";

# Process related operations.
alien builtin {
  process_send     : forall a::Type(Any, Any) . (Process({hear:a|_}), a) ~> () = "%proc_send";
  receive          : forall a::Type(Any, Any), s::Type(Any, Session). (?a.s) ~> (a, s) = "%proc_recv";
  self             : () {hear{a}|_}~> Process({ hear{a} })                     = "%proc_self";
  here             : () ~> Location                                            = "%proc_here";
  there            : () ~> Location                                            = "%proc_there";
  haveMail         : () {:_|_}~> Bool                                          = "%proc_have_mail";
  recv             : () {:a|_}~> a                                             = "%proc_recv";
  process_spawn    : (() ~e~@ _) ~> (Process ({ |e }))                         = "%proc_spawn";
  spawn_at         : (Location, () ~e~@ _) ~> Process ({ |e })                 = "%proc_spawn_at";
  spawn_angel      : (() ~e~@ _) ~> Process ({ |e })                           = "%proc_spawn_angel";
  spawn_angel_at   : (Location, () ~e~@ _) ~> Process ({ |e })                 = "%proc_spawn_angel_at";
  spawn_wait       : (() { |e}~> a) ~> a                                       = "%proc_spawn_wait";
  spawn_wait'      : () ~> a                                                   = "%proc_spawn_wait'";
  sleep            : (Int) ~> ()                                               = "%proc_sleep";
}

# Sessions.
alien builtin {
  send             : forall a::Type(Any, Any), s::Type(Any, Session). (a, !a.s) ~> s = "%session_send";
  session_receive  : forall a::Type(Any, Any), s::Type(Any, Session). (?a.s) ~> (a, s) = "%session_recv";
  link             : forall s::Type(Any, Session), e::Row(Unl, Any).(s, ~s) ~e~> () = "%session_link";
}

# Access points.
alien builtin {
  new         : forall s::Type(Any, Session). () ~> AP(s)         = "%ap_new";
  newAP       : forall s::Type(Any, Session). (Location) ~> AP(s) = "%ap_new_loc";
  newClientAP : forall s::Type(Any, Session). () ~> AP(s)         = "%ap_new_client";
  newServerAP : forall s::Type(Any, Session). () ~> AP(s)         = "%ap_new_server";
  accept      : forall s::Type(Any, Session). (AP(s)) ~> s        = "%ap_accept";
  request     : forall s::Type(Any, Session). (AP(s)) ~> ~s       = "%ap_request";
  cancel      : forall s::Type(Any, Session). (s) ~> ()           = "%ap_cancel";
  close       : (End) ~> ()                                       = "%ap_close";
}

