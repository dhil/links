# run with --endpoint lib/ --jslib lib/test.js
module Test {
  alien javascript {
    setTitle : (String) ~%~> () = "setTitle";
    alertBox : (String) ~%~> () = "alertBox";
  }
}

fun mainPage(_) {
  var _ = spawnClient {
    Test.setTitle("Hello!");
    Test.alertBox("Hola!")
  };

  page
    <html><body><h1>Hi!</h1></body></html>
}

fun main() {
  addRoute("/", mainPage);
  #addStaticRoute("/lib", "js", [("js", "text/javascript")]);
  servePages()
}

main()
